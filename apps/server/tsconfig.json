{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@server/*": ["src/*"]
		},
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
